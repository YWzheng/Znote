<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_content_list_title"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/w"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/iv_content_list_title"
        android:layout_toStartOf="@id/iv_content_list_title"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_content_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="5dp"
            android:text="2016年7月25～29日喊单盈利102点"
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/tv_content_list_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="fmforex"
                android:textColor="#66000000"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_content_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07-30 03:11:34"
                android:textColor="#66000000"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
