<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFFFFF">

    <!--重点在于ToggleButton 按钮-->

    <ImageView
        android:id="@+id/list_crawler_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        tools:src="@drawable/w"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="98dp"
        android:layout_toRightOf="@+id/list_crawler_imageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_crawler_textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="프레그먼트의 뷰를 생성한다"/>

        <TextView
            android:id="@+id/list_crawler_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="HungryOsori"/>
    </LinearLayout>

    <ToggleButton
        android:id="@+id/list_crawler_button_subscription"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_toggle_btn"
        android:textColor="@android:color/white"
        android:textOff="구독"
        android:textOn="구독 해제"/>


</RelativeLayout>

