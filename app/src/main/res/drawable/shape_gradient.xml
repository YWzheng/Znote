<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <gradient
        android:angle="135"
        android:centerColor="#4CAF50"
        android:endColor="#2E7D32"
        android:startColor="#81C784"
        android:type="linear"/>
    <!--渐变色
    angle：角度（0-180度）
    centerColor：中间色值
    endColor：结束色值
    startColor：开始色值
    type：类型 linear 和 radial
    -->
</shape>