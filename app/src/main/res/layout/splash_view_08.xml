<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#4690E2"
    >

    <!--重点在字体的使用-->
    <TextView
        android:id="@+id/text_view_app_name"
        fontPath="@string/ff.font.roboto.thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="fir.flight"
        android:textColor="#ffffff"
        android:textSize="32sp"
        tools:ignore="MissingPrefix"
        tools:targetApi="lollipop"
        />

    <TextView
        android:id="@+id/text_view_slogan"
        fontPath="@string/ff.font.roboto.thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_app_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="An android version Test Flight\nby using the testing app distribution\nservice provided by fir.im"
        android:textColor="#ffffff"
        android:textSize="18sp"
        tools:ignore="MissingPrefix"/>
</RelativeLayout>
